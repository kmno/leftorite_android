<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <!-- small left item -->
        <ImageView
            android:id="@+id/left_history_item_imageview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <!-- separator -->
        <View
            android:id="@+id/separator"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:visibility="gone" />

        <View
            android:id="@+id/left_item_arm"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/overlay_color" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/select_left_item_button_split"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="false"
            android:focusable="false"
            android:tint="@color/colorAccent"
            app:borderWidth="0dp"
            app:fabCustomSize="20dp"
            app:maxImageSize="10dp"
            app:srcCompat="@drawable/ic_favorite"
            tools:ignore="VectorDrawableCompat" />

        <View
            android:id="@+id/right_item_arm"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/overlay_color" />

        <!-- small right item -->
        <ImageView
            android:id="@+id/right_history_item_imageview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/history_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginBottom="5dp"
        android:textColor="@color/secondaryLightTextColor"
        android:textSize="10sp" />

    <View
        android:id="@+id/bottom_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/overlay_color" />
</FrameLayout>