<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToStart"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="100"
        motion:motionInterpolator="easeInOut">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageView" />
            <KeyAttribute
                android:scaleX="1.1"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageView2" />
            <KeyAttribute
                android:scaleX="0.8"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageView" />
            <KeyAttribute
                android:scaleY="1.1"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageView2" />
            <KeyAttribute
                android:scaleY="0.8"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageView" />
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:maxAcceleration="100"
            motion:maxVelocity="100"
            motion:onTouchUp="autoCompleteToStart"
            motion:touchAnchorId="@+id/imageView2"
            motion:touchAnchorSide="left"
            motion:touchRegionId="@+id/imageView2" />
    </Transition>

    <Transition
        motion:autoTransition="animateToStart"
        motion:constraintSetEnd="@+id/drag_right"
        motion:constraintSetStart="@id/start"
        motion:duration="100"
        motion:motionInterpolator="easeInOut">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageView2" />
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:maxAcceleration="100"
            motion:maxVelocity="100"
            motion:onTouchUp="autoCompleteToStart"
            motion:touchAnchorId="@+id/imageView"
            motion:touchAnchorSide="right"
            motion:touchRegionId="@+id/imageView" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintHorizontal_weight="1"
            motion:layout_constraintStart_toEndOf="@+id/imageView3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/imageView3"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintHorizontal_chainStyle="spread_inside"
            motion:layout_constraintHorizontal_weight="1"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/imageView2"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toEndOf="@+id/imageView"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/select_right_item_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView3"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/imageView"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/imageView3"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintHorizontal_chainStyle="spread_inside"
            motion:layout_constraintHorizontal_weight="0.3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintHorizontal_weight="1"
            motion:layout_constraintStart_toEndOf="@+id/imageView3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/imageView2"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintHorizontal_weight="1"
            motion:layout_constraintStart_toEndOf="@+id/imageView"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/drag_right">
        <Constraint
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintHorizontal_weight="0.3"
            motion:layout_constraintStart_toEndOf="@+id/imageView3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/imageView3"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintHorizontal_chainStyle="spread_inside"
            motion:layout_constraintHorizontal_weight="1"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/imageView2"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintHorizontal_weight="1"
            motion:layout_constraintStart_toEndOf="@+id/imageView"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>